<div class="wrapper-chat">
  <div class="chats">
    <div class="chats__search">
      <input
        type="search"
        placeholder="search"
        class="input-inner input-search">
      <a href="/src/pages/profile.hbs">Profile</a>
    </div>
    <div class="chats__list">
      <div class="contact">
        {{!-- col --}}
        <div class="contact__left">
          <div class="contact__avatar"></div>
          <div class="contact__col">
            <div class="contact__name">User</div>
            <div class="contact__last-message">hello</div>
          </div>
        </div>
        {{!-- col --}}
        <div class="contact__col">
          <div class="contact__date">10:21</div>
          <div class="contact__message-counter">
            2
          </div>
        </div>
        {{!-- col --}}
      </div>
      {{!-- contact --}}
      <div class="contact contact_selected">
        {{!-- col --}}
        <div class="contact__left">
          <div class="contact__avatar"></div>
          <div class="contact__col">
            <div class="contact__name">User</div>
            <div class="contact__last-message">hello</div>
          </div>
        </div>
        {{!-- col --}}
        <div class="contact__col">
          <div class="contact__date">10:21</div>
          <div class="contact__message-counter">
            2
          </div>
        </div>
        {{!-- col --}}
      </div>
      {{!-- contact 2 --}}
      <div class="contact">
        {{!-- col --}}
        <div class="contact__left">
          <div class="contact__avatar"></div>
          <div class="contact__col">
            <div class="contact__name">User</div>
            <div class="contact__last-message">hello</div>
          </div>
        </div>
        {{!-- col --}}
        <div class="contact__col">
          <div class="contact__date">10:21</div>
          <div class="contact__message-counter">
            2
          </div>
        </div>
        {{!-- col --}}
      </div>
      {{!-- contact 3 --}}
    </div>
  </div>
  <main class="chat">
    <div class="chat__top">
      <div class="chat__contact">
        <div class="contact__avatar chat__avatar"></div>
        <div class="chat__name">User</div>
      </div>
      <div class="chat__options-container">
        <button class="button-outline">
          <svg
            class="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="1em"
            height="1em"
            viewBox="0 0 24 24">
            <path
              fill="currentColor"
              d="M12 16a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2a2 2 0 0 1
              2-2m0-6a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2a2 2 0 0 1
              2-2m0-6a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2a2 2 0 0 1 2-2Z"
              />
            </svg>
          </button>
          {{> dropdown-default class="chat__dropdown"}}
        </div>
      </div>
      {{!-- top / contact info --}}
      <div class="chat__messages">
        {{> message target="from" text="hello world!" time="10:21"}}
        <div class="message__info">5 feb</div>
        {{> message target="to" text="hello world!" time="10:24"}}
        {{> message target="to" text="hello world 2!" time="10:25"}}

      </div>
      {{!-- messages --}}
      <form class="chat__bottom">
        <button class="button-outline">
          <svg
            class="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24">
            <g transform="rotate(90 12 12)">
              <path
                fill="currentColor"
                d="M7.5 18A5.5 5.5 0 0 1 2 12.5A5.5 5.5 0 0 1 7.5 7H18a4 4 0 0 1
                4 4a4 4 0 0 1-4 4H9.5A2.5 2.5 0 0 1 7 12.5A2.5 2.5 0 0 1 9.5
                10H17v1.5H9.5a1 1 0 0 0-1 1a1 1 0 0 0 1 1H18a2.5 2.5 0 0 0
                2.5-2.5A2.5 2.5 0 0 0 18 8.5H7.5a4 4 0 0 0-4 4a4 4 0 0 0 4
                4H17V18H7.5Z"
                />
              </g></svg>
          </button>
          <textarea
            name="message"
            cols="50"
            rows="1"
            placeholder="Write..."
            class="input-inner chat__message-input"></textarea>
          <button
            type="submit"
            class="button-outline"><svg
              class="icon"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24">
              <path
                fill="currentColor"
                d="m2 21l21-9L2 3v7l15 2l-15 2v7Z"
                />
              </svg></button>
          </form>
          {{!-- bottom / send message --}}
        </main>
      </div>
